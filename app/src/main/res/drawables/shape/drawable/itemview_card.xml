<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--the shadow comes from here-->
<item
    android:bottom="-0dp"
    android:drawable="@android:drawable/dialog_holo_light_frame"
    android:left="0dp"
    android:right="0dp"
    android:top="0dp"
    >
</item>

<item
    android:bottom="5dp"
    android:left="5dp"
    android:right="0dp"
    android:top="0dp">
    <!--whatever you want in the background, here i preferred solid white -->
    <shape android:shape="rectangle">
        <gradient android:type="radial" android:gradientRadius="150" android:centerX="0" android:centerY="0" android:startColor="@color/main_color" android:endColor="@color/white"/>


    </shape>
</item>
</layer-list>